{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "es2020": true,
    "mocha": true
  },
  "globals": {
    "BigInt": true
  },
  "parser": "babel-eslint",
  "extends": ["eslint:recommended"],
  "rules": {
    "no-undef": ["error", { "typeof": true }],
    "no-var": "error",
    "no-restricted-globals": ["off", "BigInt"],
    "no-const-assign": "error",
    "no-unused-vars": "warn"
  }
}
